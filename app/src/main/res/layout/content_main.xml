<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.marv.element.MainActivity"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="?android:colorBackground"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#33B5E5"
        android:textAllCaps="true"
        android:text="Sign in to Element" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="?android:colorBackground"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#33B5E5"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="?android:colorBackground"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="email@domain.com"
        android:id="@+id/username"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/Black"
        android:text=""
        android:textSize="18dp"
        android:inputType="textAutoComplete|textEmailAddress"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:colorBackground"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="password"
        android:id="@+id/password"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/Black"
        android:text=""
        android:textSize="18dp"
        android:inputType="textPassword"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="?android:colorBackground"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:checked="true"
        android:text="Remember my login credentials"
        android:textAllCaps="true"
        android:id="@+id/rememberMeCheckBox"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="?android:colorBackground"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="190dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:id="@+id/login"
            android:background="@color/Orange"
            android:textColor="@color/White"
            android:text="Log In"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textSize="17dp"
            android:layout_gravity="end"/>

        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/loader"
            android:visibility="gone"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="?android:colorBackground"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="@color/Orange"
        android:textSize="12dp"
        android:textAlignment="center"
        android:padding="10dp"
        android:text="@string/element"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icon"
        android:layout_gravity="center"
        android:scaleType="fitCenter"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="10dp"
        android:textAlignment="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="Â© Copyright 2016 Siddhant Vinchurkar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="10dp"
        android:textAlignment="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:text="All rights reserved."/>

</LinearLayout>

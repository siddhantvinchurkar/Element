<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.marv.element.CloudActivity"
    tools:showIn="@layout/activity_cloud"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="?android:colorBackground"/>

    <com.marv.element.Typewriter
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/welcome"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#33B5E5"
        android:textAllCaps="true"
        android:text="Welcome to Element" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="?android:colorBackground"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#33B5E5"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="?android:colorBackground"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="20dp"
        android:id="@+id/online"
        android:textAllCaps="false"
        android:textColor="@color/Orange"
        android:text="0 user(s) online right now"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="?android:colorBackground"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Notification Title"
        android:id="@+id/notifyTitle"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/Black"
        android:text=""
        android:maxLength="30"
        android:textSize="18dp"
        android:inputType="textAutoCorrect"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:colorBackground"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Notification Content"
        android:id="@+id/notifyContent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/Black"
        android:text=""
        android:textSize="18dp"
        android:inputType="textAutoCorrect"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="?android:colorBackground"/>

    <Button
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:id="@+id/sendpn"
        android:background="@color/Orange"
        android:textColor="@color/White"
        android:text="Send Push Notification"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="?android:colorBackground"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="What's New?"
        android:id="@+id/wnew"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/Black"
        android:text=""
        android:textSize="18dp"
        android:inputType="textAutoCorrect"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="?android:colorBackground"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/update"
        android:background="@color/Orange"
        android:textColor="@color/White"
        android:text="Update What's New"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="?android:colorBackground"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Greeting Content"
                android:id="@+id/mGreetContent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/Black"
                android:text=""
                android:textSize="18dp"
                android:inputType="textAutoCorrect"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="?android:colorBackground"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Greeting Speech Content"
                android:id="@+id/sGreetContent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/Black"
                android:text=""
                android:textSize="18dp"
                android:inputType="textAutoCorrect"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="?android:colorBackground"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Picture URL"
                android:id="@+id/pictureURL"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/Black"
                android:text=""
                android:textSize="18dp"
                android:inputType="textAutoCorrect"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="?android:colorBackground"/>

            <Switch
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:id="@+id/greet"
                android:checked="true"
                android:text="Startup Greeting"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="?android:colorBackground"/>

            <Button
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:id="@+id/update2"
                android:background="@color/Orange"
                android:textColor="@color/White"
                android:text="Update Startup Greeting"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:colorBackground"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icon"
        android:layout_gravity="center"
        android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="10dp"
                android:textAlignment="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:text="Â© Copyright 2016 Siddhant Vinchurkar"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="10dp"
                android:textAlignment="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="All rights reserved."/>

            </LinearLayout>
    </ScrollView>

</LinearLayout>
